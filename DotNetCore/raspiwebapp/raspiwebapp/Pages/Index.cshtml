@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome, traveller</h1>
    <p>This web application is running on @ViewBag.Version</p>
    <p>The server @ViewBag.Hostname which is hosting this application is running @ViewBag.OSVersion</p>
    @if ((bool)ViewBag.SixtyFourBit)
    {
        <p>The OS is 64 bit.</p>
    }

    @if (!(bool)ViewBag.SixtyFourBit)
    {
        <p>The OS is 32 bit.</p>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <H3>@ViewBag.Error</H3>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Temp))
    {
        <p>The server's core temperature is @ViewBag.Temp</p>
    }
</div>
